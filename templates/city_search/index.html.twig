{% extends 'base.html.twig' %}

{% block body %}
    <main>

        <div class="col-sm-12">
            <h3 class="centered"> Enter here the name of the city for which you'd like to read the forecast.</h3>

            <form action="{{ path('city_search') }}" method="get">
                <div class="searcher">
                    <input type="search" name="city_name" class="my-searcher" placeholder="City name...">
                    <button class="my-button" type="submit">Search</button>
                </div>
            </form>

        </div>

    </main>

{% endblock %}
