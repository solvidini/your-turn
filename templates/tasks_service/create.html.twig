{% extends 'base.html.twig' %}


{% block isActive %}
    <ul class="nav">
        <li>
            <a href="{{ path('forecast') }}">
                <i class="pe-7s-user"></i>
                <p>Forecast</p>
            </a>
        </li>
        <li>
            <a href="{{ path('tasks_service') }}">
                <i class="pe-7s-note2"></i>
                <p>Tasks</p>
            </a>
        </li>
        <li>
            <a href="{{ path('flats_service') }}">
                <i class="pe-7s-home"></i>
                <p>Flats</p>
            </a>
        </li>
        <li>
            <a href="{{ path('users_service') }}">
                <i class="pe-7s-users"></i>
                <p>Users</p>
            </a>
        </li>
    </ul>
{% endblock %}

{% block content %}



    <div class="container-fluid my-margin">
        <div class="row">
            <h2 class="text-center">Create a task</h2>

        </div>
        <div class="row">
            {{ form_start(taskForm) }}
            <div class="col-md-12">
                <div class="form-group col-lg-2 col-lg-offset-1" style="padding: 0;">
                {{ form_row(taskForm.type, { 'label' : 'choose type', 'id' : 'choice', 'attr' : { 'class' : 'form-control'} }) }}
                </div>
                <div class="form-group col-lg-2" style="padding: 0;">
                    {{ form_row(taskForm.flat, { 'label' : 'choose your flat', 'attr' : { 'class' : 'form-control'} }) }}
                </div>
                <div class="form-group col-lg-6" style="padding: 0;">
                    {{ form_row(taskForm.name, { 'label' : "NAME", 'type' : 'text', 'id' : 'value', 'attr' : { 'class' : 'form-control', 'placeholder' : 'enter the name of the task to do...' }}) }}
                </div>
                <button class="btn btn-fill btn-my col-lg-4 col-lg-offset-4 col-xs-12">Create</button>
                {{ form_end(taskForm) }}
            </div>
        </div>
    </div>

    <script src="{{ asset('js/change_placeholder_tasks.js') }}" type="text/javascript"></script>

{% endblock %}