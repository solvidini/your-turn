{% extends 'base.html.twig' %}

{% block content %}

    <div class="container-fluid">
        <div class="row" style="margin-bottom: 3em;">
            <h3 class="text-center">Create a task for <b>{{ flat.name }}</b></h3>
        </div>
        <div class="row">
            {{ form_start(taskForm) }}
            <div class="col-md-12">
                <div class="form-group col-lg-2 col-lg-offset-2" style="padding: 0;">
                {{ form_row(taskForm.type, { 'label' : 'choose type', 'id' : 'choice', 'attr' : { 'class' : 'form-control'} }) }}
                </div>
                <div class="form-group col-lg-6" style="padding: 0;">
                    {{ form_row(taskForm.name, { 'label' : "NAME", 'type' : 'text', 'id' : 'value', 'attr' : { 'class' : 'form-control', 'placeholder' : 'enter the name of the task to do...' }}) }}
                </div>
                <button class="btn btn-fill col-lg-4 col-lg-offset-4 col-xs-12">Create</button>
                {{ form_end(taskForm) }}
            </div>
        </div>
    </div>

    <script src="{{ asset('js/change_placeholder_tasks.js') }}" type="text/javascript"></script>

{% endblock %}