{% extends 'not_logged_in.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <!-- login: test@test password: test-->
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-8 mx-auto">
                    <div class="card border-none">
                        <div class="card-body">
                            <p class="mt-4 text-white lead text-center">
                                Please sign in to your account
                            </p>
                            <div class="mt-4">
                                <form method="post">
                                    {% if error %}
                                        <div class="my-alert"> Email or password is incorrect! </div>
                                    {% endif %}
                                    <div class="form-group">
                                        <input type="email" class="form-control" name="email" id="email" value="{{ last_username }}" placeholder="Enter email address" required autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control" id="password" value="" placeholder="Enter password" required>
                                        <i id="pass-status" class="fas fa-eye-slash eye-pos" aria-hidden="true"></i>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <label class="custom-control custom-checkbox">
                                        <input type="checkbox" id="remember_me" name="_remember_me" class="custom-control-input" checked>
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description text-white" style="font-size: 0.8em;">Remember me</span>
                                    </label>
                                    <button type="submit" class="btn btn-my btn-fill float-right">Sign in</button>
                                </form>
                                <div class="clearfix"></div>
                                <p class="content-divider center mt-4"></p>
                            </div>
                            <p class="text-center">
                                Don't have an account yet? <a href="{{ path('app_register') }}">Sign up!</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 mt-5 footer">
                    <p class="text-white small text-center">
                        &copy; <a href="{{ path('welcome') }}">Your Turn</a> <script>document.write(new Date().getFullYear())</script>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
