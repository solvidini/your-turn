{% extends 'no_roles.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-8 mx-auto">
                    <div class="card border-none">
                        <div class="card-body">
                            <div class="mt-4">
                                <div class="mt-2 text-center">
                                    <h2>Create Your Account</h2>
                                </div>
                                <p class="mt-4 text-white lead text-center">
                                    Sign up to <a href="{{ path('welcome') }}">Your Turn</a> web application
                                </p>
                                {{ form_start(registrationForm) }}
                                <div class="form-group">
                                    {{ form_row(registrationForm.email, { 'label' : false, 'type' : 'email', 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter email address' }}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.plainPassword, { 'label' : false, 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter your password' , 'id' : 'pass-field'}}) }}
                                    <i id="pass-status" class="fas fa-eye-slash eye-pos" aria-hidden="true"></i>
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.firstName, { 'label' : false, 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter your first name' }}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.lastName, { 'label' : false, 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter your last name' }}) }}
                                </div>
                                <button class="btn btn-my btn-fill btn-block">Register</button>
                                {{ form_end(registrationForm) }}
                                <div class="clearfix"></div>
                                <p class="content-divider center mt-4"></p>
                            </div>
                            <p class="text-center">
                                Already have an account? <a href="{{ path('app_login') }}">Login Here</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 mt-5 footer">
                    <p class="text-white small text-center">
                        &copy; <a href="{{ path('welcome') }}">Your Turn</a> <script>document.write(new Date().getFullYear())</script>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
