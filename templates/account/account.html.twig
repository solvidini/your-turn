{% extends 'base.html.twig' %}

{% block isActive %}
    <ul class="nav">
        <li>
            <a href="{{ path('profile') }}">
                <i class="pe-7s-user"></i>
                <p>Profile</p>
            </a>
        </li>
        <li>
            <a href="{{ path('forecast') }}">
                <i class="pe-7s-sun"></i>
                <p>Forecast</p>
            </a>
        </li>
        <li>
            <a href="{{ path('tasks_service') }}">
                <i class="pe-7s-note2"></i>
                <p>Tasks</p>
            </a>
        </li>
        <li>
            <a href="{{ path('flats_service') }}">
                <i class="pe-7s-home"></i>
                <p>Flats</p>
            </a>
        </li>
        <li>
            <a href="{{ path('users_service') }}">
                <i class="pe-7s-users"></i>
                <p>Users</p>
            </a>
        </li>
    </ul>
{% endblock %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Change password</h4>
                        </div>
                        <div class="content">
                            <form action="{{ path('change_password') }}" method="post">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="password"> Old password
                                                <input type="password" name="old_password" id="old_password"
                                                       class="form-control"
                                                       placeholder="Please enter your old password">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="password"> New password
                                                <input type="password" name="new_password" id="password"
                                                       class="form-control"
                                                       placeholder="Please enter your new password">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info btn-fill pull-right">Update password</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Delete account</h4>
                        </div>
                        <div class="content">
                            <form action="{{ path('delete_account') }}" method="post">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="password">
                                                <input type="password" name="password" id="password"
                                                       class="form-control"
                                                       placeholder="Please enter your password to delete your account">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-danger btn-fill pull-right">Delete account</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
