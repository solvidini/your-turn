{% extends 'base.html.twig' %}


{% block isActive %}
    <ul class="nav">
        <li>
            <a href="{{ path('forecast') }}">
                <i class="pe-7s-user"></i>
                <p>Forecast</p>
            </a>
        </li>
        <li>
            <a href="">
                <i class="pe-7s-note2"></i>
                <p>Tasks</p>
            </a>
        </li>
        <li class="active">
            <a href="{{ path('flats_service') }}">
                <i class="pe-7s-home"></i>
                <p>Flats</p>
            </a>
        </li>
        <li>
            <a href="{{ path('users_service') }}">
                <i class="pe-7s-users"></i>
                <p>Users</p>
            </a>
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="container-fluid my-margin">
        <div class="row">
            <div class="col-md-12">
               <p>Go <a href="{{ path('create_flat') }}">HERE</a> to create a flat.</p>
            </div>
        </div>
    </div>

    <div class="container-fluid my-margin">
        <div class="row">
            <div class="col-md-12">
                <form action="{{ path('flats_service') }}" method="get" id="users_service" style="margin-bottom: 2em;">
                    <div class="row my-margin">
                        <div class="form-group">
                            <label for="flat_name" class="col-lg-3 col-lg-offset-1">Search for flats by: </label>
                            <div class="col-lg-2">
                            <select name="option" class="form-control">
                                <option value="id">ID</option>
                                <option value="name">Name</option>
                            </select>
                            </div>
                            <div class="col-lg-4 col-lg-offset-right-2">
                                <input type="search" id="flat_name" name="value" class="form-control" placeholder="value...">
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-fill btn-my col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1" type="submit">
                        Go!
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Table of found flats</h4>
                        <p class="category">Search for flats you want to join!</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Number of users</th>
                            <th class="text-center">Options</th>
                            </thead>
                            <tbody>
                                {% for key, flat in flats %}
                                    <tr>
                                        <td>{{ flat.getId() }}</td>
                                        <td>{{ flat.getName() }}</td>
                                        <td>{{ numberOfUsers[key] }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('join_flat', parameters = [  flat.getId() ]) }}" class="btn btn-fill btn-my btn-sm">Join flat</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="text-center">
                              {{ knp_pagination_render(flats) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
