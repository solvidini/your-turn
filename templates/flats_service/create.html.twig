{% extends 'base.html.twig' %}


{% block isActive %}
    <ul class="nav">
        <li>
            <a href="{{ path('forecast') }}">
                <i class="pe-7s-user"></i>
                <p>Forecast</p>
            </a>
        </li>
        <li>
            <a href="{{ path('tasks_service') }}">
                <i class="pe-7s-note2"></i>
                <p>Tasks</p>
            </a>
        </li>
        <li>
            <a href="{{ path('flats_service') }}">
                <i class="pe-7s-home"></i>
                <p>Flats</p>
            </a>
        </li>
        <li>
            <a href="{{ path('users_service') }}">
                <i class="pe-7s-users"></i>
                <p>Users</p>
            </a>
        </li>
    </ul>
{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="row">
            <h2 class="text-center">Create a flat</h2>
        </div>
        <div class="row">
            {{ form_start(flatForm) }}
            <div class="col-md-12">
                <div class="form-group col-lg-6 col-lg-offset-3">
                    {{ form_row(flatForm.name, { 'label' : false, 'type' : 'text', 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter flat name' }}) }}
                </div>
                <div class="form-group col-lg-6 col-lg-offset-3">
                    {{ form_row(flatForm.password, { 'label' : false, 'id' : 'password', 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter password for your flat'}}) }}
                    <i id="pass-status" class="fas fa-eye-slash eye-pos" aria-hidden="true"></i>
                </div>
                <button class="btn btn-fill col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">Create</button>
                {{ form_end(flatForm) }}
            </div>
        </div>
    </div>

    <script src="{{ asset('js/view-password.js') }}" type="text/javascript"></script>

{% endblock %}